{% extends 'base.html.twig' %}

{% block title %}Picokeebs - Boutique{% endblock %}

{% block stylesheets %}
<style>
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
    }

    .product-card {
        transition: all 0.3s ease;
        height: 100%;
        border: 1px solid #e8e8e8;
        border-radius: 0.75rem;
        overflow: hidden;
        background-color: #fff;
        cursor: pointer;
        display: flex;
        flex-direction: column;
    }

    .product-card:hover {
        border-color: #bbb;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
        transform: translateY(-6px);
    }

    .product-img {
        width: 100%;
        height: 280px;
        aspect-ratio: 1/1;
        object-fit: cover;
        background: #f0f0f0;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-img {
        transform: scale(1.05);
    }

    .product-placeholder {
        width: 100%;
        height: 280px;
        aspect-ratio: 1/1;
        background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #999;
        font-size: 1.1rem;
    }

    .product-info {
        padding: 1.75rem;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .product-name {
        font-size: 1.2rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 1rem;
        flex-grow: 1;
    }

    .product-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid #f0f0f0;
    }

    .product-price {
        font-size: 1.35rem;
        font-weight: 700;
        color: var(--bs-primary);
    }

    @media (max-width: 768px) {
        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 1.5rem;
        }

        .product-img {
            height: 220px;
        }

        .page-header h1 {
            font-size: 2rem;
        }
    }

    @media (max-width: 576px) {
        .products-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .product-img {
            height: 300px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="page-header">
    <h1 class="page-title" style="margin-top: 3rem !important; margin-bottom: 2rem !important; font-size: 2.5rem !important;">{{ 'store.title'|trans }}</h1>
</div>

<div class="products-grid">
    {% for product in products %}
    <a href="{{ path('app_product_show', {id: product.id}) }}" class="product-card">
        {% if product.images|length > 0 %}
        <img src="{{ asset('images/' ~ product.images.first.imageName) }}" alt="{{ product.name }}" class="product-img">
        {% else %}
        <div class="product-placeholder">No image</div>
        {% endif %}
        <div class="product-info">
            <h3 class="product-name">{{ product.name }}</h3>
            <div class="product-footer">
                <span class="product-price">{{ product.price }}â‚¬</span>
                <div class="btn btn-primary btn-sm">
                    {{ 'store.see_details'|trans }}
                </div>
            </div>
        </div>
    </a>
    {% endfor %}
</div>
{% endblock %}