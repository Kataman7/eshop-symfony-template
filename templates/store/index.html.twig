{% extends 'base.html.twig' %}

{% block title %}Picokeebs - Boutique{% endblock %}

{% block stylesheets %}
<style>
    .product-placeholder {
        width: 100%;
        height: 280px;
        aspect-ratio: 1/1;
        background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #999;
        font-size: 1.1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="page-header">
    <h1 class="page-title">{{ 'store.title'|trans }}</h1>
</div>

<div class="products-grid">
    {% for product in products %}
    <a href="{{ path('app_product_show', {id: product.id}) }}" class="product-card">
        {% if product.images|length > 0 %}
        <img src="{{ asset('images/' ~ product.images.first.imageName) }}" alt="{{ product.name }}" class="product-img">
        {% else %}
        <div class="product-placeholder">No image</div>
        {% endif %}
        <div class="product-info">
            <h3 class="product-name">{{ product.name }}</h3>
            <div class="product-footer">
                <span class="product-price">{{ product.price }}â‚¬</span>
                <div class="btn btn-primary btn-sm">
                    {{ 'store.see_details'|trans }}
                </div>
            </div>
        </div>
    </a>
    {% endfor %}
</div>
{% endblock %}