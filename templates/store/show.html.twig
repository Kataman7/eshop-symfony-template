{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Picokeebs{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
<div class="row g-5" style="margin-top: 4rem;">
    <!-- Product Gallery -->
    <div class="col-lg-6">
        <div class="product-gallery">
            {% if product.images|length > 0 %}
            <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for image in product.images %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <img src="{{ asset('images/' ~ image.imageName) }}" alt="{{ product.name }}" class="product-img-large d-block w-100">
                    </div>
                    {% endfor %}
                </div>
                {% if product.images|length > 1 %}
                <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
                <div class="carousel-indicators">
                    {% for image in product.images %}
                    <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="{{ loop.index0 }}" class="{% if loop.first %}active{% endif %}"></button>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
            {% else %}
            <div class="product-img-large" style="background: #f5f5f5; border-radius: 0.75rem; display: flex; align-items: center; justify-content: center; color: #999;">
                No image
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Product Details & Add to Cart -->
    <div class="col-lg-6">
        <div class="product-details">
            <h1 class="product-title">{{ product.name }}</h1>
            <div class="product-price-large mb-4">{{ product.price }}â‚¬</div>
            
            <div class="add-to-cart-section p-4 bg-light rounded-3 mt-4">
                <h4 class="mb-3">{{ 'store.add_to_cart'|trans }}</h4>
                <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="quantity-control">
                    <div class="d-flex align-items-end gap-3 mb-3">
                        <div class="quantity-group" style="max-width: 100px;">
                            <label for="quantity" class="form-label small text-muted mb-1">{{ 'cart.quantity'|trans }}</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" max="99">
                        </div>
                        <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                            <i class="fas fa-cart-plus"></i>
                            <span>{{ 'store.add_to_cart'|trans }}</span>
                        </button>
                    </div>
                </form>
                <div class="cart-links mt-2">
                    <a href="{{ path('app_cart') }}" class="text-decoration-none text-muted small">
                        <i class="fas fa-shopping-cart me-1"></i>{{ 'cart.title'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Product Description Section -->
<div class="row mt-5">
    <div class="col-12">
        <div class="product-description-section pt-5 border-top">
            <h3 class="mb-4">Description</h3>
            {% if product.description %}
            <div class="product-description text-muted" style="font-size: 1.1rem; line-height: 1.8;">
                {{ product.description|markdown_to_html }}
            </div>
            {% else %}
            <p class="text-muted">{{ 'store.no_description'|trans|default('No description available.') }}</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}