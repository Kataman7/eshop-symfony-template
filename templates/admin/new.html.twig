{% extends 'base.html.twig' %}

{% block title %}Nouveau produit - Picokeebs{% endblock %}

{% block stylesheets %}
<style>
    .form-text {
        color: #999;
        font-size: 0.9rem;
    }

    .btn-add-image {
        margin-bottom: 1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="admin-container">
    <h1 class="admin-title" style="margin-top: 3rem !important; margin-bottom: 2rem !important; font-size: 2rem !important;">Ajouter un produit</h1>

    <div class="form-section">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Product name'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Product description'}}) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': '99.99'}}) }}
                    {{ form_errors(form.price) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.images) }}
                    <div id="images-container" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
                        {% for imageForm in form.images %}
                            <div class="image-item">
                                {{ form_widget(imageForm) }}
                                <button type="button" class="btn btn-outline-danger btn-sm remove-image">
                                    <i class="fas fa-trash me-1"></i>Supprimer
                                </button>
                            </div>
                        {% endfor %}
                    </div>
                    <button type="button" class="btn btn-outline-secondary btn-sm btn-add-image" id="add-image">
                        <i class="fas fa-plus me-1"></i>Ajouter une image
                    </button>
                    {{ form_errors(form.images) }}
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Cr√©er
                    </button>
                    <a href="{{ path('app_admin') }}" class="btn btn-outline-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let imageIndex = {{ form.images|length }};
    const container = document.getElementById('images-container');
    const prototype = container.dataset.prototype;
    const addButton = document.getElementById('add-image');

    addButton.addEventListener('click', function() {
        const newForm = prototype.replace(/__name__/g, imageIndex);
        const div = document.createElement('div');
        div.className = 'image-item mb-3 p-3 border rounded';
        div.innerHTML = newForm + '<button type="button" class="btn btn-danger btn-sm remove-image">Supprimer cette image</button>';
        container.appendChild(div);
        imageIndex++;
    });

    container.addEventListener('click', function(e) {
        if (e.target.classList.contains('remove-image')) {
            e.target.closest('.image-item').remove();
        }
    });
});
</script>
{% endblock %}