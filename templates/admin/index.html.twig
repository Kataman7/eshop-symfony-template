{% extends 'base.html.twig' %}

{% block title %}Administration - Picokeebs{% endblock %}

{% block stylesheets %}
<style>
    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 2rem;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .admin-table {
        background-color: #fff;
        border-radius: 0.75rem;
        overflow: hidden;
        border: 1px solid #e8e8e8;
    }

    .admin-table table {
        margin-bottom: 0;
    }

    .admin-table th {
        background-color: #f9f9f9;
        font-weight: 600;
        color: #1a1a1a;
        border-bottom: 2px solid #e8e8e8;
        padding: 1rem;
    }

    .admin-table td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #e8e8e8;
    }

    .admin-table tbody tr:hover {
        background-color: #f9f9f9;
    }

    .product-image-preview {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 0.35rem;
    }

    .actions-cell {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .actions-cell .btn {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
    }

    @media (max-width: 768px) {
        .admin-header {
            flex-direction: column;
        }

        .admin-table table {
            font-size: 0.9rem;
        }

        .admin-table th,
        .admin-table td {
            padding: 0.75rem 0.5rem;
        }

        .actions-cell {
            flex-direction: column;
        }

        .actions-cell .btn {
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="admin-header">
    <h1 class="admin-title mb-0" style="margin-top: 3rem !important; margin-bottom: 2rem !important; font-size: 2rem !important;">{{ 'admin.products'|trans|default('Produits') }}</h1>
    <a href="{{ path('app_admin_product_new') }}" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Ajouter un produit
    </a>
</div>

<div class="admin-table">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }}â‚¬</td>
                        <td>
                            {% if product.images|length > 0 %}
                                <img src="{{ asset('images/' ~ product.images.first.imageName) }}" alt="{{ product.name }}" class="product-image-preview">
                                {% if product.images|length > 1 %}
                                    <small class="text-muted ms-2">+{{ product.images|length - 1 }}</small>
                                {% endif %}
                            {% else %}
                                <span class="text-muted">No image</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="actions-cell">
                                <a href="{{ path('app_admin_product_edit', {id: product.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form method="post" action="{{ path('app_admin_product_delete', {id: product.id}) }}" style="display: inline;" onsubmit="return confirm('Delete this product?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}