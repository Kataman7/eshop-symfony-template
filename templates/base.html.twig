<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ shop_name|default('Picokeebs') }} - Boutique{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/custom-theme.css') }}">
        {% block stylesheets %}
        <style>
            /* Global spacing and typography */
            body {
                font-size: 1.05rem;
            }

            /* Header improvements */
            header {
                border-bottom: 1px solid #e8e8e8;
                background-color: #ffffff;
            }

            .navbar-brand {
                font-size: 1.5rem !important;
                font-weight: 800 !important;
                color: var(--bs-primary) !important;
                letter-spacing: -0.5px !important;
                text-decoration: none !important;
                transition: all 0.3s ease !important;
            }

            .navbar-brand:hover {
                color: var(--bs-primary-hover) !important;
                transform: scale(1.02) !important;
            }

            .navbar {
                padding: 1rem 0;
            }

            /* Main content area */
            main {
                padding: 3rem 0;
                min-height: calc(100vh - 200px);
            }

            /* Page titles - consistent styling */
            .page-title {
                font-size: 2.5rem !important;
                font-weight: 700 !important;
                color: #1a1a1a !important;
                margin-top: 3rem !important;
                margin-bottom: 2rem !important;
                letter-spacing: -1px !important;
                font-family: var(--bs-body-font-family) !important;
            }

            .page-header {
                margin: 0 !important;
                padding: 0 !important;
            }

            .admin-title {
                font-size: 2rem !important;
                font-weight: 700 !important;
                color: #1a1a1a !important;
                margin-top: 3rem !important;
                margin-bottom: 2rem !important;
                letter-spacing: -0.5px !important;
                font-family: var(--bs-body-font-family) !important;
            }

            /* Footer improvements */
            footer {
                padding: 3rem 0;
                border-top: 1px solid #333;
                margin-top: auto;
            }

            footer h5, footer h6 {
                font-size: 1.1rem;
                margin-bottom: 1.5rem;
            }

            footer p {
                line-height: 1.8;
                opacity: 0.9;
            }

            footer li {
                margin-bottom: 0.75rem;
            }

            /* Responsive improvements */
            @media (max-width: 991.98px) {
                .navbar-brand {
                    font-size: 1.5rem !important;
                }

                .navbar-collapse {
                    border-top: 1px solid #dee2e6;
                    margin-top: 1.5rem;
                    padding-top: 1.5rem;
                }

                .navbar-nav {
                    text-align: left;
                }

                .navbar-nav .nav-link {
                    padding: 0.75rem 0;
                    margin: 0;
                }

                main {
                    padding: 2rem 0;
                }
            }

            @media (max-width: 575.98px) {
                .navbar-brand {
                    font-size: 1.25rem !important;
                }

                .navbar-toggler {
                    border: none;
                    padding: 0.25rem 0.5rem;
                }

                .navbar-toggler:focus {
                    box-shadow: none;
                }

                main {
                    padding: 1.5rem 0;
                }
            }
        </style>
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100" style="background-color: #f9f9f9;">
        <header class="bg-white py-3 border-bottom">
            <nav class="navbar navbar-expand-lg navbar-light bg-white">
                <div class="container-lg">
                    <a class="navbar-brand fw-bold" href="{{ path('app_store') }}">{{ shop_name|default('Picokeebs') }}</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <div class="navbar-nav ms-auto">
                            <a class="nav-link" href="{{ path('app_store') }}"><i class="fas fa-store me-2"></i>{{ 'store.title'|trans }}</a>
                            <a class="nav-link" href="{{ path('app_cart') }}"><i class="fas fa-shopping-cart me-2"></i>{{ 'cart.title'|trans }}</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="nav-link" href="{{ path('app_admin') }}"><i class="fas fa-cog me-2"></i>Admin</a>
                                <a class="nav-link" href="{{ path('app_logout') }}">{{ 'auth.logout'|trans }}</a>
                            {% endif %}
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="localeDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-globe me-2"></i>{{ app.request.locale|upper }}
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('app_change_locale', {locale: 'fr'}) }}">Français</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_change_locale', {locale: 'en'}) }}">English</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <main class="flex-grow-1">
            <div class="container-lg">
                {% block body %}{% endblock %}
            </div>
        </main>
        <footer class="bg-dark text-white mt-5 border-top border-dark">
            <div class="container-lg py-5">
                <div class="row g-5">
                    <div class="col-lg-4">
                        <h5 class="fw-bold mb-3">{{ shop_name|default('Picokeebs') }}</h5>
                        <p class="text-white-50 small">{{ shop_description|default('about.story_text'|trans) }}</p>
                        <div class="d-flex gap-3 mt-4">
                            <a href="#" class="text-white" style="font-size: 1.2rem;"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="text-white" style="font-size: 1.2rem;"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="text-white" style="font-size: 1.2rem;"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <h6 class="fw-bold mb-3">{{ 'footer.quick_links'|trans }}</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2"><a href="{{ path('app_store') }}" class="text-white-50 text-decoration-none small">{{ 'store.title'|trans }}</a></li>
                            <li class="mb-2"><a href="{{ path('app_about') }}" class="text-white-50 text-decoration-none small">{{ 'about.title'|trans }}</a></li>
                            <li class="mb-2"><a href="{{ path('app_contact') }}" class="text-white-50 text-decoration-none small">{{ 'contact.title'|trans }}</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4">
                        <h6 class="fw-bold mb-3">{{ 'footer.contact'|trans }}</h6>
                        <ul class="list-unstyled small">
                            <li class="mb-2"><i class="fas fa-envelope me-2"></i><span class="text-white-50">{{ shop_email|default('contact@picokeebs.com') }}</span></li>
                            <li class="mb-2"><i class="fas fa-phone me-2"></i><span class="text-white-50">{{ shop_phone|default('+33 1 23 45 67 89') }}</span></li>
                            <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i><span class="text-white-50">{{ shop_address|default('Paris, France') }}</span></li>
                        </ul>
                    </div>
                </div>
                <hr class="my-4 border-secondary">
                <div class="text-center text-white-50 small">
                    <p class="mb-0">&copy; 2026 {{ shop_name|default('Picokeebs') }}. {{ 'footer.copyright'|trans }}.</p>
                </div>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
