<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Picokeebs - Boutique{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/custom-theme.css') }}">
        {% block stylesheets %}
        <style>
            /* Minimal custom styles only for specific needs */
            body {
                font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            }

            /* Responsive navbar improvements */
            @media (max-width: 991.98px) {
                .navbar-brand {
                    font-size: 1.5rem !important;
                }

                /* Ensure navbar collapse works properly */
                .navbar-collapse {
                    border-top: 1px solid #dee2e6;
                    margin-top: 1rem;
                    padding-top: 1rem;
                }

                .navbar-nav {
                    text-align: center;
                }

                .navbar-nav .nav-link {
                    padding: 0.5rem 1rem;
                }
            }

            @media (max-width: 575.98px) {
                .navbar-brand {
                    font-size: 1.25rem !important;
                }

                .navbar-toggler {
                    border: none;
                    padding: 0.25rem 0.5rem;
                }

                .navbar-toggler:focus {
                    box-shadow: none;
                }
            }
        </style>
        {% endblock %}
    </head>
    <body class="bg-light d-flex flex-column min-vh-100">
        <header class="bg-white shadow-sm py-3">
            <nav class="navbar navbar-expand-lg navbar-light bg-white">
                <div class="container">
                    <a class="navbar-brand fw-bold text-primary fs-4" href="{{ path('app_store') }}">Picokeebs</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <div class="navbar-nav ms-auto">
                            <a class="nav-link" href="{{ path('app_store') }}"><i class="fas fa-store me-1"></i> {{ 'store.title'|trans }}</a>
                            <a class="nav-link" href="{{ path('app_cart') }}"><i class="fas fa-shopping-cart me-1"></i> {{ 'cart.title'|trans }}</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="nav-link" href="{{ path('app_admin') }}"><i class="fas fa-cog me-1"></i> {{ 'admin.title'|trans }}</a>
                                <a class="nav-link" href="{{ path('app_logout') }}">{{ 'auth.logout'|trans }}</a>
                            {% endif %}
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="localeDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-globe me-1"></i>{{ app.request.locale|upper }}
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('app_change_locale', {locale: 'fr'}) }}">Français</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_change_locale', {locale: 'en'}) }}">English</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <main class="py-4 flex-grow-1">
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </main>
        <footer class="bg-dark text-white text-center py-3 mt-auto">
            <div class="container">
                <p class="mb-0">&copy; 2026 Picokeebs. {{ 'footer.copyright'|trans }}.</p>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
