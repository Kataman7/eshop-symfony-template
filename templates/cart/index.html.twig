{% extends 'base.html.twig' %}

{% block title %}{{ 'cart.title'|trans }} - Picokeebs{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
<div class="cart-container">
    <h1 class="page-title" style="margin-top: 3rem !important; margin-bottom: 2rem !important; font-size: 2.5rem !important;">{{ 'cart.title'|trans }}</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if cartItems %}
        <div class="card">
            <div class="table-responsive">
                <table class="table cart-table mb-0">
                    <thead>
                        <tr>
                            <th>{{ 'store.description'|trans }}</th>
                            <th style="width: 120px;">{{ 'cart.quantity'|trans }}</th>
                            <th style="width: 100px; text-align: right;">{{ 'store.price'|trans }}</th>
                            <th style="width: 100px; text-align: right;">{{ 'cart.total'|trans }}</th>
                            <th style="width: 80px; text-align: center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in cartItems %}
                        <tr>
                            <td>
                                <div class="product-cell">
                                    <div class="product-info">
                                        <h6>{{ item.product.name }}</h6>
                                        <p>{% if item.product.description %}{{ item.product.description|slice(0, 60) }}{% endif %}</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <form action="{{ path('app_cart_update', {id: item.product.id}) }}" method="post" class="d-flex align-items-center gap-2">
                                    <input type="number" name="quantity" value="{{ item.quantity }}" min="1" class="form-control form-control-sm" style="width: 70px;">
                                    <button type="submit" class="btn btn-outline-primary btn-sm" title="Update">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </form>
                            </td>
                            <td style="text-align: right;">{{ item.product.price }}€</td>
                            <td style="text-align: right; font-weight: 600;">{{ item.subtotal|number_format(2, ',', ' ') }}€</td>
                            <td style="text-align: center;">
                                <a href="{{ path('app_cart_remove', {id: item.product.id}) }}" class="btn btn-outline-danger btn-sm" title="Remove">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="cart-summary">
            <div class="summary-total">
                <h3>{{ 'cart.total'|trans }}:</h3>
                <div class="total-amount">{{ total|number_format(2, ',', ' ') }}€</div>
            </div>

            <div class="cart-actions">
                <a href="{{ path('app_checkout') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-credit-card me-2"></i>{{ 'cart.checkout'|trans }}
                </a>
                <a href="{{ path('app_store') }}" class="btn btn-outline-secondary">
                    {{ 'cart.continue_shopping'|trans }}
                </a>
                <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-danger" onclick="return confirm('{{ 'cart.confirm_clear'|trans|default('Confirm clear?') }}')">
                    <i class="fas fa-trash me-2"></i>{{ 'cart.clear'|trans }}
                </a>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="empty-cart">
                <i class="fas fa-shopping-cart"></i>
                <p>{{ 'cart.empty'|trans }}</p>
                <a href="{{ path('app_store') }}" class="btn btn-primary btn-lg">
                    {{ 'cart.continue_shopping'|trans }}
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}