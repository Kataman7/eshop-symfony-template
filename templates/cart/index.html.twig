{% extends 'base.html.twig' %}

{% block title %}{{ 'cart.title'|trans }} - Picokeebs{% endblock %}

{% block stylesheets %}
<style>
    .cart-container {
        width: 100%;
    }

    .cart-table {
        font-size: 0.95rem;
    }

    .cart-table th {
        font-weight: 600;
        color: #1a1a1a;
        border-bottom: 2px solid #e8e8e8;
        padding: 1rem;
    }

    .cart-table td {
        padding: 1.5rem 1rem;
        vertical-align: middle;
    }

    .product-cell {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .product-info h6 {
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: #1a1a1a;
    }

    .product-info p {
        font-size: 0.85rem;
        color: #999;
        margin: 0;
    }

    .cart-summary {
        background-color: #f9f9f9;
        padding: 2rem;
        border-radius: 0.75rem;
        margin-top: 2rem;
    }

    .summary-total {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        gap: 1rem;
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid #e8e8e8;
    }

    .summary-total h3 {
        margin: 0;
        font-size: 1.5rem;
    }

    .summary-total .total-amount {
        font-size: 2rem;
        font-weight: 700;
        color: var(--bs-primary);
    }

    .cart-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .cart-actions .btn {
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .empty-cart {
        text-align: center;
        padding: 4rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 500px;
        width: 100%;
    }

    .empty-cart i {
        font-size: 4rem;
        color: #ddd;
        margin-bottom: 2rem;
    }

    .empty-cart p {
        font-size: 1.2rem;
        color: #999;
        margin-bottom: 2rem;
    }

    .empty-cart .btn {
        padding: 1rem 2rem;
        font-size: 1.05rem;
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .cart-table th,
        .cart-table td {
            padding: 0.75rem 0.5rem;
            font-size: 0.9rem;
        }

        .product-cell {
            flex-direction: column;
        }

        .cart-actions {
            flex-direction: column;
        }

        .cart-actions .btn {
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="cart-container">
    <h1 class="page-title" style="margin-top: 3rem !important; margin-bottom: 2rem !important; font-size: 2.5rem !important;">{{ 'cart.title'|trans }}</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if cartItems %}
        <div class="card">
            <div class="table-responsive">
                <table class="table cart-table mb-0">
                    <thead>
                        <tr>
                            <th>{{ 'store.description'|trans }}</th>
                            <th style="width: 120px;">{{ 'cart.quantity'|trans }}</th>
                            <th style="width: 100px; text-align: right;">{{ 'store.price'|trans }}</th>
                            <th style="width: 100px; text-align: right;">{{ 'cart.total'|trans }}</th>
                            <th style="width: 80px; text-align: center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in cartItems %}
                        <tr>
                            <td>
                                <div class="product-cell">
                                    <div class="product-info">
                                        <h6>{{ item.product.name }}</h6>
                                        <p>{% if item.product.description %}{{ item.product.description|slice(0, 60) }}{% endif %}</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <form action="{{ path('app_cart_update', {id: item.product.id}) }}" method="post" class="d-flex align-items-center gap-2">
                                    <input type="number" name="quantity" value="{{ item.quantity }}" min="1" class="form-control form-control-sm" style="width: 70px;">
                                    <button type="submit" class="btn btn-outline-primary btn-sm" title="Update">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </form>
                            </td>
                            <td style="text-align: right;">{{ item.product.price }}€</td>
                            <td style="text-align: right; font-weight: 600;">{{ item.subtotal|number_format(2, ',', ' ') }}€</td>
                            <td style="text-align: center;">
                                <a href="{{ path('app_cart_remove', {id: item.product.id}) }}" class="btn btn-outline-danger btn-sm" title="Remove">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="cart-summary">
            <div class="summary-total">
                <h3>{{ 'cart.total'|trans }}:</h3>
                <div class="total-amount">{{ total|number_format(2, ',', ' ') }}€</div>
            </div>

            <div class="cart-actions">
                <a href="{{ path('app_checkout') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-credit-card me-2"></i>{{ 'cart.checkout'|trans }}
                </a>
                <a href="{{ path('app_store') }}" class="btn btn-outline-secondary">
                    {{ 'cart.continue_shopping'|trans }}
                </a>
                <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-danger" onclick="return confirm('{{ 'cart.confirm_clear'|trans|default('Confirm clear?') }}')">
                    <i class="fas fa-trash me-2"></i>{{ 'cart.clear'|trans }}
                </a>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="empty-cart">
                <i class="fas fa-shopping-cart"></i>
                <p>{{ 'cart.empty'|trans }}</p>
                <a href="{{ path('app_store') }}" class="btn btn-primary btn-lg">
                    {{ 'cart.continue_shopping'|trans }}
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}