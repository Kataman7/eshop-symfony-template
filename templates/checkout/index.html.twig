{% extends 'base.html.twig' %}

{% block title %}{{ 'checkout.title'|trans }} - Picokeebs{% endblock %}

{% block stylesheets %}
<style>
    .checkout-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .order-section {
        background-color: #f9f9f9;
        border-radius: 0.75rem;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .order-section h3 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #1a1a1a;
    }

    .order-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #e8e8e8;
        gap: 1rem;
    }

    .order-item:last-child {
        border-bottom: none;
    }

    .item-details h6 {
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: #1a1a1a;
    }

    .item-details small {
        color: #999;
    }

    .item-price {
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--bs-primary);
        min-width: 100px;
        text-align: right;
    }

    .order-total {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        padding: 1rem 0 0 0;
        margin-top: 0;
        border-top: 1px solid #e8e8e8;
    }

    .order-total h4 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .order-total-amount {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--bs-primary);
    }

    .payment-section {
        background-color: #fff;
        border: 1px solid #e8e8e8;
        border-radius: 0.75rem;
        padding: 2rem;
    }

    .payment-section h3 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #1a1a1a;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    .payment-section {
        background-color: #f9f9f9;
        border-radius: 0.75rem;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .payment-section h3 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #1a1a1a;
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .checkout-container {
            margin: 0;
        }

        .order-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .item-price {
            align-self: flex-end;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="checkout-container">
    <h1 class="page-title" style="margin-top: 3rem !important; margin-bottom: 2rem !important; font-size: 2.5rem !important;">{{ 'checkout.title'|trans }}</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row g-4 align-items-stretch">
        <!-- Order Summary -->
        <div class="col-lg-7">
            <div class="order-section">
                <h3>{{ 'checkout.order_summary'|trans }}</h3>
                
                {% for item in cartItems %}
                <div class="order-item">
                    <div class="item-details flex-grow-1">
                        <h6>{{ item.product.name }}</h6>
                        <small>{{ 'cart.quantity'|trans }}: {{ item.quantity }}</small>
                    </div>
                    <div class="item-price">{{ item.subtotal|number_format(2, ',', ' ') }}€</div>
                </div>
                {% endfor %}

                <div class="order-total">
                    <h4>{{ 'cart.total'|trans }} HT:</h4>
                    <div class="order-total-amount">{{ total|number_format(2, ',', ' ') }}€</div>
                </div>
            </div>
        </div>

        <!-- Payment Form -->
        <div class="col-lg-5">
            <div class="payment-section">
                <h3>{{ 'checkout.payment_info'|trans }}</h3>
                <form method="post" action="{{ path('app_checkout_process') }}" class="payment-form">
                    <div class="mb-3">
                        <label for="email" class="form-label">{{ 'checkout.email'|trans }}</label>
                        <input type="email" class="form-control" id="email" name="email" required placeholder="you@example.com">
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-lock me-2"></i>{{ 'checkout.pay_with_stripe'|trans }}
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}